generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // Brand settings
  brandLogo     String?
  brandColor    String?   @default("#2563EB")

  accounts      Account[]
  sessions      Session[]
  projects      Project[]
  documents     UserDocument[]
  apiKeys       ApiKey[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Project {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Project info
  name          String
  clientName    String?
  description   String?
  startDate     DateTime?
  endDate       DateTime?
  technologies  String?

  // Status: DRAFT, UPLOADING, ANALYZING, CONFIGURING, GENERATING, COMPLETED, ERROR
  status        String   @default("DRAFT")
  currentStep   Int      @default(1)

  // Input files stored as JSON string
  inputFiles    String?

  // AI extracted data as JSON string
  extractedData String?

  // Full document content (7 stages) as JSON string
  documentData  String?

  // Output files
  docxUrl       String?
  pdfUrl        String?

  // Settings - stored as JSON string "[1,2,3,4,5,6,7]"
  stages        String   @default("[1,2,3,4,5,6,7]")
  templateId    String?

  // Chat messages
  messages      ChatMessage[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ChatMessage {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  role      String   // "user" | "assistant" | "system"
  content   String

  createdAt DateTime @default(now())
}

// ══════════════════════════════════════════════════════════════════════════════
// KNOWLEDGE BASE - Preset & User Documents
// ══════════════════════════════════════════════════════════════════════════════

model PresetDocument {
  id            String    @id @default(cuid())
  code          String    @unique  // "TT13_2020", "ND13_2023", etc.
  name          String              // "Thông tư 13/2020/TT-BTTTT"
  shortName     String              // "TT13/2020"
  category      String              // "TAX", "SOFTWARE", "DATA", "CONTRACT"
  description   String
  content       String              // Full text content
  summary       String?             // AI-generated summary
  effectiveDate DateTime?
  isActive      Boolean   @default(true)

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model UserDocument {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name         String
  originalName String
  fileUrl      String
  fileType     String   // "pdf", "docx", "txt", "md"
  fileSize     Int

  // Extracted/processed content
  content      String?
  summary      String?

  // Categorization
  category     String?  // "INTERNAL", "CONTRACT", "POLICY", "OTHER"
  tags         String   @default("[]") // JSON array

  isProcessed  Boolean  @default(false)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// ══════════════════════════════════════════════════════════════════════════════
// API KEYS - User-provided, encrypted
// ══════════════════════════════════════════════════════════════════════════════

model ApiKey {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  provider      String    // "anthropic" | "openai"

  // Encrypted key (AES-256)
  encryptedKey  String

  // Last 4 chars for display (unencrypted)
  keyHint       String    // "sk-ant-...xxxx"

  // Validation status
  isValid       Boolean   @default(false)
  lastValidated DateTime?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([userId, provider])
}
